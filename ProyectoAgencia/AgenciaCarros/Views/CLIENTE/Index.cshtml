@model IEnumerable<AgenciaCarros.Models.CLIENTE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CLIENTES REGISTRADO</h2>

<p>
    @Html.ActionLink("Ingresar nuevo cliente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CEDULA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE)
        </th>
        <th>
            @Html.DisplayName("PRIMER APELLIDO")
        </th>
        <th>
            @Html.DisplayName("SEGUNDO APELLIDO")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMAIL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TELEFONO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.INGRESO.USUARIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DETALLE_DIRECCION.DESCRIPCION)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CEDULA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBRE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.APELLIDO1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.APELLIDO2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TELEFONO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.INGRESO.USUARIO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DETALLE_DIRECCION.DESCRIPCION)
        </td>
        <td>
            @Html.ActionLink("EDITAR", "Edit", new { id=item.ID_CLIENTE }) |
            @Html.ActionLink("DETALLES", "Details", new { id=item.ID_CLIENTE }) |
            @Html.ActionLink("ELIMINAR", "Delete", new { id=item.ID_CLIENTE })
        </td>
    </tr>
}

</table>
