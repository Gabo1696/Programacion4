@model IEnumerable<AgenciaCarros.Models.INVENTARIO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>INVENTARIO GUARDADO</h2>

<p>
    @Html.ActionLink("Ingresar nuevo inventario", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CANTIDAD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VALOR)
        </th>
        <th>
            @Html.DisplayName("ULTIMA VENTA")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.REPUESTO.NOMBRE)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CANTIDAD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VALOR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ULTIMA_VENTA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.REPUESTO.NOMBRE)
        </td>
        <td>
            @Html.ActionLink("EDITAR", "Edit", new { id=item.ID_INVENTARIO }) |
            @Html.ActionLink("DETALLES", "Details", new { id=item.ID_INVENTARIO }) |
            @Html.ActionLink("ELIMINAR", "Delete", new { id=item.ID_INVENTARIO })
        </td>
    </tr>
}

</table>
